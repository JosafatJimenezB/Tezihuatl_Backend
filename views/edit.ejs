<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" /> 

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Crud</title>
  </head>
  <body>

    <% if (user) { %>

    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header">Nuevo Registro</div>
            <div class="card-body">
                <form action="/update" method="post">
                    <input id="id" name="id" value="<%= user.id %>" hidden>
                    <div class="mb-3">
                        <label for="user" class="form-label">Usuario</label>
                        <input type="text" class="form-control" id="user" name="user" value="<%= user.user %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Rol</label>
                        <select name="rol" id="rol" class="form-select" tabindex="2">
                            <option <%= user.rol=='Holistica' ? 'selected' : '' %> value="Masaje Holistico">Masaje Holistico</option>
                            <option <%= user.rol=='Herbolaria' ? 'selected' : '' %> value="Herbolaria">Herbolaria</option>
                            <option <%= user.rol=='Limpia' ? 'selected' : '' %> value="Limpia espiritual">Limpia espiritual</option>
                            <option <%= user.rol=='Temazcal' ? 'selected' : '' %> value="Temazcal">Temazcal</option>
                        </select>

                        <!-- edad -->
                        <label for="edad" class="form-label">Edad</label>
                        <input type="text" class="form-control" id="edad" name="edad" value="<%= user.edad %>" tabindex="3">
                        
                        <!-- genero -->
                        <label for="genero" class="form-label">Genero</label>
                        <select name="genero" id="genero" class="form-select" tabindex="4">
                          <option <%= user.genero=='Masculino' ? 'selected' : '' %> value="Masculino">Masculino</option>
                          <option <%= user.genero=='Femenino' ? 'selected' : '' %> value="Femenino">Femenino</option>
                        </select>


                        <!-- estado civil -->
                        <label for="civil" class="form-label">Estado Civil</label>
                        <select name="estadoCivil" id="estadoCivil" class="form-select" tabindex="5">
                          <option <%= user.estadoCivil=='C' ? 'selected' : '' %> value="Casado o Casada">Casado o Casada</option>
                          <option <%= user.estadoCivil=='S' ? 'selected' : '' %> value="Soltero o Soltera">Soltero o Soltera</option>
                          <option <%= user.estadoCivil=='D' ? 'selected' : '' %> value="Divorciado o Divorciada">Divorciado o Divorciada</option>
                          <option <%= user.estadoCivil=='V' ? 'selected' : '' %> value="Viudo o Viuda">Viudo o Viuda</option>
                        </select>

                        <!-- direccion -->
                        <label for="domicilio" class="form-label">Direcci√≥n</label>
                        <input type="text" class="form-control input-large" id="domicilio" name="domicilio" value="<%= user.domicilio %>" tabindex="6">

                        <!-- motivo de la visita -->
                        <label for="motivo" class="form-label">Motivo de la visita</label>
                        <input type="text" class="form-control input-large" id="motivo" name="motivo" value="<%= user.motivo %>" tabindex="7">

                        <br>
                        <button type="submit" class="btn btn-primary" tabindex="5"><i class="fa-solid fa-cloud-arrow-up"></i> Guardar</button>
                        <a href="/" class="btn btn-secondary"><i class="fa-solid fa-trash-can"></i> Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% } %>



    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
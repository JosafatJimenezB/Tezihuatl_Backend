<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" /> 

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Crud</title>
  </head>
  <body>

    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header"><i class="fa-solid fa-id-card"></i> Nuevo Registro</div>
            <div class="card-body">
                <form action="/save" method="post">
                    <div class="mb-3">
                        <label for="user" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="user" name="user" tabindex="1">
                    </div>
                    <div class="mb-3">
                      <!-- servicio -->
                        <label for="user" class="form-label">Servicio</label>
                        <select name="rol" id="rol" class="form-select" tabindex="2">
                            <option value="Holistica" selected>Masaje Holistico</option>
                            <option value="Herbolaria">Herbolaria</option>
                            <option value="Limpia">Limpia espiritual</option>
                            <option value="Temazcal">Temazcal</option>
                        </select>
                        
                        <!-- edad -->
                        <label for="edad" class="form-label">Edad</label>
                        <input type="text" class="form-control" id="edad" name="edad" tabindex="3">
                        
                        <!-- genero -->
                        <label for="genero" class="form-label">Genero</label>
                        <select name="genero" id="genero" class="form-select" tabindex="4">
                          <option value="Masculino" selected>Masculino</option>
                          <option value="Femenino">Femenino</option>
                        </select>


                        <!-- estado civil -->
                        <label for="civil" class="form-label">Estado Civil</label>
                        <select name="estadoCivil" id="estadoCivil" class="form-select" tabindex="5">
                          <option value="C" selected>Casado o Casada</option>
                          <option value="S">Soltero o Soltera</option>
                          <option value="D">Divorciado o Divorciada</option>
                          <option value="V">Viudo o Viuda</option>
                        </select>

                        <!-- direccion -->
                        <label for="domicilio" class="form-label">Direcci√≥n</label>
                        <input type="text" class="form-control input-large" id="domicilio" name="domicilio" tabindex="6">

                        <!-- motivo de la visita -->
                        <label for="motivo" class="form-label">Motivo de la visita</label>
                        <input type="text" class="form-control input-large" id="motivo" name="motivo" tabindex="7">

                        <br>
                        <button type="submit" class="btn btn-primary" tabindex="8"><i class="fa-solid fa-cloud-arrow-up"></i> Guardar</button>
                        <a href="/" class="btn btn-secondary"><i class="fa-solid fa-trash-can"></i> Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>